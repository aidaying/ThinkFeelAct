<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:minHeight="80dp"
android:layout_height="match_parent"
android:orientation="horizontal"
android:weightSum="1">

<TextView
    android:layout_height="match_parent"
    android:id="@+id/longTermQuestionIdDisplay"
    android:layout_width="40dp"
    android:gravity="center"
    android:textSize="8pt"
    android:layout_weight="0.1"
    android:text="41" />

    <TextView
        android:id="@+id/longTermQuestionDisplay"
        android:gravity="center_vertical"
     android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:text="wqdwqdfqwfwqydgwebycrgyefgwegejfbwekjfcbwejkbfvjkwebvkewnkjfbwejkbvhewvkwe" />

    <TextView
    android:id="@+id/longTermRateDisplay"
    android:gravity="center"
    android:textSize="8pt"
    android:layout_height="match_parent"
    android:layout_width="50dp"
    android:layout_weight="0.1"
    android:text="10" />

<ImageButton
    android:src="@android:drawable/ic_menu_edit"
    android:id="@+id/editLongTermRatingButton"
    android:layout_width="50dp"
    android:layout_height="match_parent"
    android:layout_weight="0.1"
    android:adjustViewBounds="false" />

</LinearLayout>
