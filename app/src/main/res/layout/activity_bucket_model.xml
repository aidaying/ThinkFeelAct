<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bucketImg"
                android:scaleType="fitCenter"
                android:adjustViewBounds="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/b0" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/bucketModelPercentage"
            android:hint="Rating: "
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/rateDesc"
            android:background="@android:drawable/editbox_background" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:id="@+id/bucketSeek"
            android:progress="5"
            android:max="10"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="164dp">

            <Button
                android:text="SOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/bucketModelPercentage"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="76dp"
                android:id="@+id/sosBtn"
                android:layout_weight="1" />

            <Button
                android:text="Add a stressful event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/selfEvalBtn"
                android:layout_weight="1" />

            <Button
                android:text="Time Out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick=""
                android:id="@+id/timeoutBtn"
                android:layout_toEndOf="@+id/bucketModelPercentage"
                android:layout_marginStart="45dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
