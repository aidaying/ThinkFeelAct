<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <Button
            android:text="Self-Evaluation"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="24dp"
            android:id="@+id/selfEvalBtn" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="373dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/b10"
                android:id="@+id/imageView8"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/bucketModelPercentage"
                android:text="100%"
                android:textAlignment="gravity"
                android:gravity="center_vertical|center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="121dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="164dp">

            <Button
                android:text="SOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/bucketModelPercentage"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="76dp"
                android:id="@+id/sosBtn"
                android:layout_weight="1" />

            <Button
                android:text="Time Out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick=""
                android:id="@+id/timeoutBtn"
                android:layout_toEndOf="@+id/bucketModelPercentage"
                android:layout_marginStart="45dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
