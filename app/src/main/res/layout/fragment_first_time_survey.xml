<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextbtn"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/question"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/radio"
        android:layout_marginTop="49dp" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radio"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/stressRateBar">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True"
            android:id="@+id/truebutton"
            android:checked="false"
            android:layout_marginBottom="58dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False"
            android:id="@+id/falseButton"
            android:checked="false"
            android:layout_alignTop="@+id/radio"
            android:layout_alignEnd="@+id/textView2" />

    </RadioGroup>
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="6in"
        android:id="@+id/stressRateBar"
        android:layout_above="@+id/nextbtn"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="66dp"
        android:layout_alignEnd="@+id/nextbtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Stress Rating (Min 1 - Max 10)"
        android:id="@+id/textView2"
        android:layout_marginStart="39dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
